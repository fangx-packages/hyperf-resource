{
    "name": "fangx/resource",
    "description": "A api resource component for hyperf.",
    "type": "library",
    "license": "MIT",
    "keywords": [
      "php",
      "hyperf",
      "resource"
    ],
    "authors": [
        {
            "name": "nfangxu",
            "email": "nfangxu@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.2",
        "ext-swoole": ">=4.5",
        "ext-json": "*",
        "hyperf/command": "~2.0.0",
        "hyperf/devtool": "~2.0.0",
        "hyperf/http-message": "~2.0.0",
        "hyperf/paginator": "~2.0.0",
        "hyperf/utils": "~2.0.0",
        "psr/container": "^1.0"
    },
    "require-dev": {
        "doctrine/common": "^2.9",
        "friendsofphp/php-cs-fixer": "v2.16.1",
        "hyperf/database": "~2.0.0",
        "hyperf/grpc-server": "~2.0.0",
        "hyperf/http-server": "~2.0.0",
        "mockery/mockery": "^1.0",
        "phpstan/phpstan": "^0.12",
        "phpunit/phpunit": "^7.0",
        "symfony/var-dumper": "^5.1"
    },
    "autoload": {
        "psr-4": {
            "Fangx\\Resource\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Fangx\\Tests\\": "tests/",
            "GPBMetadata\\": "tests/Stubs/Grpc/GPBMetadata",
            "Grpc\\": "tests/Stubs/Grpc/Grpc"
        }
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "hyperf": {
            "config": "Fangx\\Resource\\ConfigProvider"
        }
    },
    "bin": [
    ],
    "scripts": {
        "cs-fix": "php-cs-fixer fix $1",
        "test": "phpunit --colors=always -c phpunit.xml",
        "analyse": "phpstan analyse --memory-limit 300M -l 0 -c phpstan.neon ./src ./tests"
    }
}
